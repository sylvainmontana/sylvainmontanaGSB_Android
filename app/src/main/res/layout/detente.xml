<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/boutonRetourD"
            style="@android:style/Widget.DeviceDefault.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/retour"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/imageViewChargement"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            app:srcCompat="@drawable/chargement" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonPapier"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1.00"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/papier" />

            <ImageButton
                android:id="@+id/imageButtonCaillou"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/caillou" />

            <ImageButton
                android:id="@+id/imageButtonCiseaux"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.01"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ciseaux" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/Resultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.00"
        android:text="0 - 0"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textViewR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jouez"
        android:textAlignment="center"
        android:textSize="30sp" />

</LinearLayout>